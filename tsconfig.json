{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"strict": true,
		"jsx": "react-jsx",
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"skipLibCheck": true
	},
	"include": ["src", "test", "vite.config.ts"],
	"exclude": ["node_modules", "dist"]
}
